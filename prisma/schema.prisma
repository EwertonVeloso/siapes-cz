generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Employee {
  id                        String @id @default(uuid())
  professional_registration String @unique
  active                    Boolean @default(true)
  role                      EmployeeRole
  name                      String
  email                     String @unique
  password                  String
  phone                     String
  created_at                DateTime @default(now())
  updated_at                DateTime @updatedAt

  @@map("employees")
}

enum EmployeeRole {
  ADMIN
  MANAGER
  PRECEPTOR
}


