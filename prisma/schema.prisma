generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Employee {
  id                        String @id @default(uuid())
  professional_registration String @unique
  active                    Boolean @default(true)
  role                      EmployeeRole
  name                      String
  email                     String @unique
  password                  String
  phone                     String
  created_at                DateTime @default(now())
  updated_at                DateTime @updatedAt

  @@map("employees")
}

enum EmployeeRole {
  ADMIN
  MANAGER
  PRECEPTOR
}

model Coordinator {
  id                        String @id @default(uuid())
  registration              String @unique
  role                      CoordinatorRole @default(COORDINATOR)
  name                      String
  email                     String @unique
  password                  String
  created_at                DateTime @default(now())
  updated_at                DateTime @updatedAt

  @@map("coordinators")
}

model Request {
  id                String       @id @default(uuid())
  protocol          String       @unique
  hash_protocol     String?
  title             String
  description       String
  status            RequestStatus @default(PENDING)
  course            String
  students_number   Int
  createdAt         DateTime  @default(now())
  archives          Archive[]
}

model Archive {
  id             String        @id @default(uuid())
  name           String
  url            String
  request_id     String
  request        Request @relation(fields: [request_id], references: [id], onDelete: Cascade)
}

enum RequestStatus {
  ACCEPTED
  PENDING
  REFUSED
}

enum CoordinatorRole {
  COORDINATOR
}
